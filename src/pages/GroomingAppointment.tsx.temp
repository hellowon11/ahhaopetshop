      // 1. æ—¶é—´æ§½ä¸å­˜åœ¨
      // 2. æ—¶é—´æ§½çš„isAvailableå±æ€§ä¸ºfalse
      // 3. æ—¶é—´æ§½çš„å½“å‰é¢„çº¦æ•°é‡å·²è¾¾åˆ°5ä¸ª
      if (!timeSlot || !timeSlot.isAvailable || timeSlot.currentBookings >= 5) {
        return false;
      }
    }
    
    return true;
  };

